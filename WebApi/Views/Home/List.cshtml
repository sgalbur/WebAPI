<form class="navbar-form  navbar-left" role="search">
    <div class="input-group">
        <input type="text" ng-model="query" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
        <div class="input-group-btn">
            <button ng-click="reset()" type="submit" class="btn btn-info">
                <span class="glyphicon glyphicon-search"></span>
            </button>&nbsp;<button ng-click="query=''; reset()" ng-disabled="!query" type="submit" class="btn">Reset</button>
        </div>
    </div>
</form>

<br/>
<table class="table table-striped table-condensed table-hover">
    <thead>
    <th>
        <a ng-click="sort('Text')">Todo</a>
        <span ng-show="sort_order=='Text' && is_desc==true" class="glyphicon glyphicon-arrow-down"></span>
        <span ng-show="sort_order=='Text' && is_desc==false" class="glyphicon glyphicon-arrow-up"></span>
    </th>
    <th>
        <a ng-click="sort('Priority')">Priority</a>
        <span ng-show="sort_order=='Priority' && is_desc==true" class="glyphicon glyphicon-arrow-down"></span>
        <span ng-show="sort_order=='Priority' && is_desc==false" class="glyphicon glyphicon-arrow-up"></span>
    </th>
    <th>
        <a ng-click="sort('DueDate')">Due</a>
        <span ng-show="sort_order=='DueDate' && is_desc==true" class="glyphicon glyphicon-arrow-down"></span>
        <span ng-show="sort_order=='DueDate' && is_desc==false" class="glyphicon glyphicon-arrow-up"></span>
    </th>
    <th><a href="#/new"><span class="glyphicon glyphicon-plus-sign"></span></a></th>
    </th>
    <tbody>
        <tr ng-repeat="todo in items" id="todo_{{todo.Id}}">
            <td>{{todo.Text}}</td>
            <td>{{todo.Priority}}</td>
            <td>{{todo.DueDate | date:mediumDate}}</td>
            <td>
                <a href="#/edit/{{todo.Id}}"><span class="glyphicon glyphicon-edit"></span></a>
                <a ng-click="delete()"><span class="glyphicon glyphicon-remove"></span></a>
            </td>
        </tr>
    </tbody>
</table>
<a ng-show="has_more()" ng-click="show_more()">Show More...</a>
